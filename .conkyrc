background yes
use_xft yes
xftfont Sans:size=10
xftalpha 1
update_interval 1.0
total_run_times 0
own_window yes
own_window_transparent yes
own_window_type desktop
#own_window_argb_visual yes
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
double_buffer yes
minimum_size 200 200
maximum_width 240
draw_shades no
draw_outline no
draw_borders no
draw_graph_borders yes
default_color FFFFFF
default_shade_color 000000
default_outline_color 828282
alignment top_right
gap_x 7
gap_y 56
no_buffers yes
uppercase no
cpu_avg_samples 2
override_utf8_locale yes

TEXT
#Conky version${alignr} ${conky_version}
${membar 0}
Up${alignr}${uptime}
Date${alignr}${time %x}
Time${alignr}${time %X}
$stippled_hr
OS${alignr}Linux
Host${alignr}${nodename}
Kernel${alignr}${kernel}
Machine${alignr}${machine}
Desktop${alignr}openbox
$stippled_hr
RAM${alignr}${memmax}
In Use${alignr}${memperc}% = ${mem}
#Swap${alignr}${swap} of ${swapmax}
Highest  $alignr %
${top_mem name 1} $alignr ${top_mem mem 1}
${top_mem name 2} $alignr ${top_mem mem 2}
${top_mem name 3} $alignr ${top_mem mem 3}
$stippled_hr
CPU${alignr}${cpu cpu0}% @ ${freq_g}GHz
LoadAvg${alignr}${loadavg}
#Temperature$alignr ${hwmon temp 1}°C ${hwmon temp 2}°C
Highest  $alignr %
${top name 1} $alignr ${top cpu 1}
${top name 2} $alignr ${top cpu 2}
${top name 3} $alignr ${top cpu 3}
$stippled_hr
/Root${alignr}${fs_free /} / ${fs_size /}
/Home${alignr}${fs_free /home} / ${fs_size /home}
Read: $diskio_read/s${alignr}${diskiograph_read 8,60}
Write: $diskio_write/s${alignr}${diskiograph_write 8,60}
#Temperature${alignr}${execi 30 hddtemp -n /dev/sda}°C
$stippled_hr
Up: ${upspeed wlp2s0} kb/s ${alignr}${upspeedgraph wlp2s0 8,60}
Upload: ${alignr}${totalup wlp2s0}
Down: ${downspeed wlp2s0} kb/s ${alignr}${downspeedgraph wlp2s0 8,60}
Download: ${alignr}${totaldown wlp2s0}
$stippled_hr
Running Processes$alignr$running_processes of $processes
$stippled_hr
Updates ${alignr}${execi 3600 aptitude search "~U" | wc -l | tail} package(s)
$stippled_hr
Gmail${alignr}${execi 60 ~/.config/conky/scripts/gmail.sh}
${membar 0}
